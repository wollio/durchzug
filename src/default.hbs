<body class="{{body_class}}">
    {{!-- Navigation bar --}}

    <header class="w-full z-[10000] px-4 md:px-0 flex justify-center text-lg sm:text-base fixed top-6 flex-col items-center newNav">
      <nav id="primaryNavigation" class="hidden md:container transition-all bg-white grid grid-cols-3 gap-4 rounded-2xl flex-grow items-center {{^is "page"}}{{#if post.feature_image}}py-2 px-4{{/if}}{{/is}}">
        <div class="flex items-center col-span-2 sm:col-span-1 font-medium">
          <a href="{{@site.url}}">
            {{@site.title}}
          </a>
        </div>
        <button class="menu sm:col-span-2 sm:hidden justify-self-end align-self-center"></button>
        {{> "header"}}
      </nav>

      <nav class="newNavBar md:container transition-all grid grid-cols-3 gap-4 rounded-2xl flex-grow items-center">
        <div class="flex items-center col-span-2 sm:col-span-1 font-medium">
          <a href="{{@site.url}}">
            {{@site.title}}
          </a>
        </div>
        <button class="menu sm:col-span-2 sm:hidden justify-self-end align-self-center"></button>
        {{> "header"}}
      </nav>
    </header>
    {{!-- End Navbar --}}

    {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
